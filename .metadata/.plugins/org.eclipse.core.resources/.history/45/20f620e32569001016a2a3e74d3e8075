import java.util.Scanner;
public class fourth {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);

        System.out.print("Enter an integer: ");
        int a = scanner.nextInt();

        System.out.print("Enter a double: ");
        double b = scanner.nextDouble();

        System.out.print("Enter a character: ");
        char c = scanner.next().charAt(0);

        System.out.print("Enter a boolean (true/false): ");
        boolean d = scanner.nextBoolean();

        System.out.println("Integer value: " + a + " (Type: int)");
        System.out.println("Double value: " + b + " (Type: double)");
        System.out.println("Character value: " + c + " (Type: char)");
        System.out.println("Boolean value: " + d + " (Type: boolean)");
        
        scanner.close();

	}
}
